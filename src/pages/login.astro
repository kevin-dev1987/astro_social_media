---
import Layout from "../layouts/Layout.astro";
import LoginForm from '../components/auth/LoginForm.astro';
---
<Layout title="Sign Up!">
    <div class="auth-wrapper">
        <h2>Log in</h2>
        <LoginForm />
        <a href="/register">Not registered yet?</a>
    </div>
</Layout>

<style lang="scss">
    .auth-wrapper{
        width: 25em;
        max-width: 100%;
        margin: 0 auto;

        h2{
            margin-top: 2em;
            color: var(--text-second);
        }

        a{
            color: steelblue;
        }
    }
</style>