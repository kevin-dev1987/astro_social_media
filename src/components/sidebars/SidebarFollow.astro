---
import SideUserBox from './SideUserBox.astro';
const response = await fetch('https://jsonplaceholder.typicode.com/users/?_limit=5');
const data = await response.json();

---

<div class="who-to-follow">
    <h2>Who To Follow</h2>
    <ul>
        {
            data.map((person) => (
                <SideUserBox name={person.name} href='#' />
            ))
        }
       
    </ul>
</div>

<style lang="scss">
    .who-to-follow{

        h2{
            color: #fff;
            margin-bottom: 0.5em;
            padding: 0.5em 0 0 0.5em;
        }

        ul{
            display: flex;
            flex-direction: column;
            gap: 0;
            
        }
    }
</style>