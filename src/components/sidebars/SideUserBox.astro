---
interface Props {
    name: string,
    href: string,
    // is_online: boolean,
}

const {
    name,
    href,
    // is_online,
    ...rest
} = Astro.props as Props;
const randomOnline = Math.random() < 0.5;
---

<a 
href={href}>
<div class="box-flex">
    <div class={randomOnline ? 'image user-online' : 'image'} >
        <img src="https://picsum.photos/300" alt={name}>
    </div>
    <div class="username">
        {name}
    </div>
</div>

</a>

<style lang="scss">
    a{
        padding: 0.5em;
        transition: all 150ms ease;

        .box-flex{
            display: flex;
            flex-direction: row;
            align-items: center;

            .image{
                min-width: 50px;
                min-height: 50px;
                width: 50px;
                height: 50px;
                border-radius: 50%;
                overflow: hidden;
                margin-right: 0.5em;
                border: 2px solid steelblue;

                img{
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                    object-position: center top;
                }
            }

            .user-online{
                border-color: green;
            }

            .username{
                font-size: 1.2rem;
                text-decoration: none;
                color: #fff;
            }
        }


        &:hover{
            background-color: var(--main-bg);
        }
    }
</style>