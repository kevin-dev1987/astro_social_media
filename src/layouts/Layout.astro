---
import '../styles/global.css';
import Heading from '../components/Heading.astro';
import SidebarLeft from '../components/sidebars/SidebarLeft.astro';
import SidebarRight from '../components/sidebars/SidebarRight.astro';

interface Props {
	title?: string,
}
const {title = "My Social Media"} = Astro.props as Props;
import $ from 'jquery';
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="https://code.jquery.com/jquery-3.7.0.js" integrity="sha256-JlqSTELeR4TLqP0OG9dxM7yDPqX1ox/HfgiSLBj8+kM=" crossorigin="anonymous"></script>
    <title>{title}</title>
</head>
<body>
    <div class="wrapper">
        <SidebarLeft />
        <main>
            <Heading is_auth={false} />
            <slot />
        </main>
        <SidebarRight />
    </div>
</body>
</html>